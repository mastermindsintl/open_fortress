"UnlitGeneric"
{
	"<dx90"
	{
		$outlinecolor "[0.9 0.9 0.8]"
	}
	
	"$translucent" 1
	"$baseTexture" "hud\gradient_dm_dark"
	"$detail" "hud\leaderboard_area_team"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    	$edgesoftnessend 0.45
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinealpha "0.68"
	//$outlinestart0 1
	//$outlinestart1 1.5
	//$outlineend0 0.5
	//$outlineend1 0.52

	$outlinestart0 1.5
	$outlinestart1 1
	$outlineend0 0.52
	$outlineend1 0.5

	$scaleoutlinesoftnessbasedonscreenres 1
	// and a drop shadow
	$glow 0
	$glowcolor "[0 0 0]"
	$glowalpha 0.5
	$glowstart 0
	$glowend 0.5
	$glowx -0.005
	$glowy -0.01

	"$colortint_base"		"[0 0 0]"
	"$colortint_tmp"		"[0 0 0]"
	"$colortint_mul"		"[.7 .7 .7]"

//	"$vertexcolor" 1
	$distancealpha 1
	"$vertexalpha" 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"

	"Proxies"
	{
		"ItemTintColor"
		{
			"resultVar"		"$colortint_tmp"
		}	
		"SelectFirstIfNonZero"
		{
			"srcVar1"		"$colortint_tmp"
			"srcVar2"		"$colortint_base"
			"resultVar"		"$outlinecolor"
		}
		"Multiply"
		{
			"srcVar1"		"$outlinecolor"
			"srcVar2"		"$colortint_mul"
			"resultVar"		"$outlinecolor"
		}
	}
}

